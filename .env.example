# ===============================================
# ScheduleBot Environment Variables
# Copy this file to .env and fill in your values
# ===============================================

# === Telegram Bot Configuration ===
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Telegram ID of the admin user (your ID)
# Get your ID from @userinfobot
ADMIN_TG_ID=123456789

# === Admin Panel Configuration ===
# Password for admin panel login
# Use a strong password with letters, numbers, and symbols
ADMIN_PASSWORD=your_secure_password_here

# Secret key for session encryption (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_for_sessions_64_characters_long_hex_string

# === Database Configuration ===
# Path to SQLite database file (will be created if doesn't exist)
DATABASE_PATH=data/schedule.db

# === Timezone Configuration ===
# Timezone for scheduling (use IANA timezone names)
# Default: Europe/Moscow for Moscow time
TIMEZONE=Europe/Moscow

# === Web Server Configuration ===
# Host to bind the admin panel web server
# Use 127.0.0.1 for local access only, 0.0.0.0 to expose to network
WEB_HOST=127.0.0.1

# Port for admin panel web server
WEB_PORT=8000

# === Scheduler Configuration ===
# Time for daily morning message delivery
MORNING_MESSAGE_HOUR=8
MORNING_MESSAGE_MINUTE=0

# Minutes before class to send reminder
REMINDER_MINUTES_BEFORE=5

# === Message Delivery Configuration ===
# Number of messages to send per batch (30 recommended to avoid rate limits)
BATCH_SIZE=30

# Delay between batches in seconds (0.1-0.3 recommended)
BATCH_DELAY=0.2

# Number of retry attempts on delivery failure
MAX_RETRIES=1

# === Logging Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file
LOG_FILE_PATH=logs/app.log

# === Development/Debug Settings ===
# Set to true for development mode (more verbose logging, hot reload)
# Set to false for production
DEBUG=false
